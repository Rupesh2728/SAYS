 <!-- bootstrap modals starts -->  
<div class="modal fade" id="addmovie" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-xl">
    <div class="modal-content">
      <div class="modal-header" style="background-color:#221f1f;color: gold;">
        <h3 class="modal-title" id="staticBackdropLabel">Movie Details</h3>
        <button type="button" data-bs-dismiss="modal" aria-label="Close" style="color: gold;background-color:#221f1f;border: 0;"><i class="fa-solid fa-xmark fa-2xl"></i></button>
      </div>
      <div class="modal-body" style="background-color:lightgoldenrodyellow;">
        <div class="maindiv">
    <form action="/adminmovies/adminrentalmovieinfo" method="post">
      <div class="div1">
          <div class="subdiv1">
              <label for="theatreName">Movie Name:</label>
              <input type="text" class="mName" name="mName" value="" style="width:10rem"><br><br>
          </div>
      
          <div class="subdiv2">
             <label for="imgurl">Movie Image URL:</label>
             <input type="text" class="theatreimgurl" name="theatreimgurl" style="width:8rem"><br><br>
          </div>

          <div class="subdiv3">
            <label for="langinfo">Language:</label>
            <select name="lang" class="lang">
                <option value="Telugu">Telugu</option>
                <option value="Hindi">Hindi</option>
                <option value="Tamil">Tamil</option>
                <option value="Malayalam">Malayalam</option>
                <option value="Kannada">Kannada</option>
                <option value="English">English</option>
            </select>
          </div>
      </div>
      
      <div class="div2">
          <div class="subdiv1">
              <label for="imgurl">Release Date:</label>
              <input type="text" class="rd" name="rd" style="width:10rem" placeholder="e.g.25th June,2021" required><br><br>
          </div>
          
           <div class="subdiv2">
              <label for="imgurl">Duration:</label>
             <input type="text" class="duration" name="duration" style="width:7rem" required><br><br>	
           </div>

           <div class="subdiv3">
            <label for="screentype">Genre:</label>
            <input type="text" class="genre" name="genre" style="width:6rem" required><br><br>
           </div>
       </div>

       <div class="div10">
        <div class="subdiv1">
            <label for="Locations">Locations:</label>
            <input type="text" class="locs" name="locs" style="width:100%" placeholder="e.g.Vijayawada,Guntur,Nellore,...." required><br><br>
        </div>
     </div>
  
      <div class="div3">
          <div class="subdiv1">
            <label for="castinfo">Cast name-1:</label>
            <input type="text" class="cn1" name="cn1" style="width:10rem" required><br><br>
           </div>
  
           <div class="subdiv2">
            <label for="castinfo">Cast Image URL1:</label>
            <input type="text" class="cimg1" name="cimg1" style="width:10rem" required><br><br>
           </div>
        </div>   

        <div class="div4">
          <div class="subdiv1">
            <label for="castinfo">Cast name-2:</label>
            <input type="text" class="cn2" name="cn2" style="width:10rem" required><br><br>
           </div>
  
           <div class="subdiv2">
            <label for="castinfo">Cast Image URL2:</label>
            <input type="text" class="cimg2" name="cimg2" style="width:10rem" required><br><br>
           </div>
        </div>   

        <div class="div5">
          <div class="subdiv1">
            <label for="castinfo">Cast name-3:</label>
            <input type="text" class="cn3" name="cn3" style="width:10rem" required><br><br>
           </div>
  
           <div class="subdiv2">
            <label for="castinfo">Cast Image URL3:</label>
            <input type="text" class="cimg3" name="cimg3" style="width:10rem" required><br><br>
           </div>
        </div>   

        <div class="div6">
          <div class="subdiv1">
            <label for="castinfo">Cast name-4:</label>
            <input type="text" class="cn4" name="cn4" style="width:10rem" required><br><br>
           </div>
  
           <div class="subdiv2">
            <label for="castinfo">Cast Image URL4:</label>
            <input type="text" class="cimg4" name="cimg4" style="width:10rem" required><br><br>
           </div>
        </div>   

        <div class="div7">
          <div class="castinfo">
            <label for="screentype">Cast name-5:</label>
            <input type="text" class="cn5" name="cn5" style="width:10rem" required><br><br>
           </div>
  
           <div class="subdiv2">
            <label for="castinfo">Cast Image URL5:</label>
            <input type="text" class="cimg5" name="cimg5" style="width:10rem" required><br><br>
           </div>
        </div>   
  
          
         <div class="div8" style="display: block;">
          <label for="about">About:</label>
          <textarea class="about" name="about" rows="5" cols="100" required></textarea>
          <br><br>
         </div>
  
       <div class="div9" style="display: flex;justify-content: center;">
          <button type="submit" class="submitbtn">Submit</button>
       </div>
    </form>
  
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="removemovie" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header" style="background-color:#221f1f;color: gold;">
        <h3 class="modal-title" id="staticBackdropLabel">Remove Movie</h3>
        <button type="button" data-bs-dismiss="modal" aria-label="Close" style="color: gold;background-color:#221f1f;border: 0;"><i class="fa-solid fa-xmark fa-2xl"></i></button>
      </div>
      <div class="modal-body" style="background-color:lightgoldenrodyellow;">
       <form method="post" action="/adminmovies/adminremovemovie" style="justify-content: center;width:60%;" style="display: flex;">  
         <div class="ipfield" style="display: flex;flex-direction: column;width:10rem;">
          <label for="movie_title" style="font-size: 1.3rem;">Movie Title:</label>
          <select name="moviename" id="moviename">      
              <% if (rentalmoviearr.length==0) { %>
                <option value="No Movies">No Movies</option>
              <% } else{ %>
                 <% for( let i=0;i<rentalmoviearr.length;i++){%>
                  <option value="<%=rentalmoviearr[i]["MovieName"]%>"><%=rentalmoviearr[i]["MovieName"]%></option>
                 <%}%>
                <% } %>
          </select>
         </div>
          <button type="submit" class="confirmbtn">Confirm</button>
      </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



