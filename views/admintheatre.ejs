      <div class="ttable">
        <div class="heading">
            <h4>THEATRES</h4>
        </div>
        <%if(value.length==0){%>
          <p style="color: gold;font-size: 2rem;text-align: center;">No Theatres Registered for the Website...Till Date</p>     
        <%} else{%>
          <div class="container" style="margin-top:2rem;margin-left: 10rem;">
            <div class="theatretable">  
                    <table>
                          <thead>
                            <tr class="headingrow">
                              <th>#</th>
                              <th>Theatre ReffNo.</th>
                              <th>Theatre Mail</th>
                              <th>Theatre Name</th>
                              <th>Location</th>
                            </tr>
                          </thead>
                          
                          <tbody>
                            <% for(let i=0;i<value.length;i++) {%>
                            <tr>
                              <td><%=i+1%></td>
                              <td><%=value[i]["tReferenceNumber"]%></td>
                              <td><%=value[i]["temail"]%></td>
                              <td><%=value[i]["tName"]%></td>
                              <td><%=value[i]["city"]%></td>
                              <td>
                                <div class="editremove" style="display: flex;">
                                 <button type="button" class="btn btn-primary removebtn" style="margin-left:1rem;">
                                   Remove
                                </button>
                                </div> 
                              </td>
                            </tr>
                            <% } %>
                          </tbody>
                        </table>
                    
                  </div>      
          </div>


          <% } %>
    
       
    </div>

